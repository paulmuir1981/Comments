@page
@model Comments.Pages.EditModel
@{
    ViewData["Title"] = Model.CommentEditModel._EditMessage;
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="CommentEditModel.Id" />
    <input type="hidden" asp-for="CommentEditModel.OriginalText" />
    <div class="form-group">
        <label asp-for="CommentEditModel.NewText" class="control-label"></label>
        <input asp-for="CommentEditModel.NewText" class="form-control" />
    </div>
    <input type="submit" value="Save" class="btn btn-default" />
</form>
@section Scripts 
{
    <partial name="_ValidationScriptsPartial" />
}

